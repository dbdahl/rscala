#!/usr/bin/env bash

set -e

## For debugging
# set -x
# trap read debug

PKG_NAME=rscala

case "$(uname -s)" in
  Darwin)
    SEP=':'
    SEDOPT=.trashme
    PKG_HOME=$(dirname "$0")/..
    CWD=$(pwd -P)
    cd "$PKG_HOME"
    PKG_HOME=$(pwd -P)
    cd "$CWD"
    ;;
  CYGWIN*|MINGW32*|MSYS*)
    SEP=';'
    SEDOPT=""
    PKG_HOME=$(readlink -f $(dirname $(readlink -f "$0"))/..)
    ;;
  *)
    SEP=':'
    SEDOPT=""
    PKG_HOME=$(readlink -f $(dirname $(readlink -f "$0"))/..)
    ;;
esac

VIGNETTE=FALSE
while [[ $# -gt 0 ]]
do
  case "$1" in
    "--vignette")
      VIGNETTE=TRUE
    shift
    ;;
  *)
    shift
    ;;
  esac
done

# Make protocal.R script

cd $PKG_HOME/bin
./make-protocol
cd ..



# Set version number 

function setversion {
  OLDWD="$PWD"
  sed -i $SEDOPT 's/\(\s*Version\s*:\s*\)\(.*\)/\1'"$1"'/g' R/$PKG_NAME/DESCRIPTION
  sed -i $SEDOPT 's/\(\s*Date\s*:\s*\)\(.*\)/\1'"$2"'/g' R/$PKG_NAME/DESCRIPTION
  if [[ "$SEDOPT" ]]
  then
    rm -f R/$PKG_NAME/DESCRIPTION$SEDOPT
  fi
  cd "$OLDWD"
}

PKG_VERSION=$(cat build.sbt | grep "^version := " | cut -d '"' -f 2)
set +e
echo $PKG_VERSION | grep -q SNAPSHOT
if [[ $? == 0 ]]
then
  PKG_VERSION=$(echo $PKG_VERSION | sed s/SNAPSHOT/$(date +'%Y%m%d-%H%M')/g)
fi
set -e
setversion $PKG_VERSION $(date +'%Y-%m-%d')


# List R resources in the JAR
resourcesDir=src/main/resources/R
rm -rf "$resourcesDir"
mkdir -p "$resourcesDir"
find -L R/rscala/R -name '*.R' -exec cp {} "$resourcesDir" \;
OLDWD="$PWD"
cd $resourcesDir/..
find -L . -name '*.R' | cut -b 1-1 --complement | sort >| Rscripts
cd "$OLDWD"

# Compile Scala

set +e
SBT_FAILED=FALSE
R --slave -e "rscala::scalaSBT()"
if [[ $? != 0 ]]
then
  SBT_FAILED=TRUE
  echo
  echo "***************************************************"
  echo "***************************************************"
  echo
  echo "Please re-run this build script after it completes."
  echo
  echo "***************************************************"
  echo "***************************************************"
  echo
fi
set -e

# Build package

cd R
cd $PKG_NAME
R --slave -e 'devtools::document(roclets=c("rd", "collate", "namespace"))'
if [[ $? != 0 ]]
then
  echo
  echo "***************************************************"
  echo "***************************************************"
  echo
  echo "Please re-run this script after executing in R this:"
  echo "  install.packages(c('devtools','roxygen2','testthat'))"
  echo
  echo "***************************************************"
  echo "***************************************************"
  echo
fi
cd ..
if [[ "$SBT_FAILED" == FALSE && "$VIGNETTE" == TRUE ]]
then
  R CMD build --compact-vignettes="gs+qpdf" $PKG_NAME
else
  R CMD build --no-build-vignettes $PKG_NAME
fi
R CMD INSTALL ${PKG_NAME}_${PKG_VERSION}.tar.gz
cd ..

