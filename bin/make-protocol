#!/usr/bin/env Rscript

protocolFilename <- "../src/main/scala/org/ddahl/rscala2/server/Protocol.scala"

lines <- scan(protocolFilename,what=character(0),sep="\n",quiet=TRUE)
lines <- lines[grep("^\\s*val\\s+[A-Z_0-9]+\\s*=",lines)]
code <- sub("^\\s*val\\s+","",lines)
code <- sub("\\s+$","",code)
code <- paste(code,ifelse(grepl("=\\s*\\d+$",code),"L",""),sep="")
code <- sub("=","<-",code)

con <- file("../R/rscala2/R/protocol.R")
writeLines(code,con)
close(con)

